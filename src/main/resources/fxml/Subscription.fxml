<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane minWidth="600.0" maxWidth="1000.0" style="-fx-background-color: #212529;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SubscriptionsController">
    <left>
        <fx:include source="Sidebar.fxml" />
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #ff6b6b; -fx-font-size: 14px; -fx-font-weight: bold;" text="Back" />
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff6b6b;" text="Your Subscriptions" />
            </HBox>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox fx:id="channelBox" spacing="15" style="-fx-padding: 10;" />
            </ScrollPane>
            <Label fx:id="errorLabel" style="-fx-font-size: 14px; -fx-text-fill: #ff6b6b;" text="" />
        </VBox>
    </center>
</BorderPane>