<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<BorderPane minWidth="600.0" maxWidth="1000.0" style="-fx-background-color: #212529;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ContentPlayerController">
    <left>
        <fx:include source="Sidebar.fxml" />
    </left>
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="backButton" onAction="#handleBack" text="Back" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Label text="Content Player" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff6b6b;" />
            </HBox>
            <MediaView fx:id="mediaView" fitWidth="600" fitHeight="350" preserveRatio="true" />
            <ImageView fx:id="coverImage" fitWidth="600" fitHeight="350" preserveRatio="true" visible="false" />
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="playPauseButton" onAction="#handlePlayPause" text="Play/Pause" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Slider fx:id="volumeSlider" min="0" max="1" value="0.5" style="-fx-pref-width: 100;" />
            </HBox>
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="Content Title" />
            <HBox spacing="10">
                <Label fx:id="viewsLabel" style="-fx-font-size: 12px; -fx-text-fill: #adb5bd;" text="0 views" />
                <Label fx:id="likesLabel" style="-fx-font-size: 12px; -fx-text-fill: #adb5bd;" text="0 likes" />
            </HBox>
            <Label fx:id="descriptionLabel" style="-fx-font-size: 14px; -fx-text-fill: #adb5bd;" text="Description" wrapText="true" />
            <HBox spacing="10">
                <Button fx:id="likeButton" onAction="#handleLike" text="Like" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button fx:id="commentButton" onAction="#handleComment" text="Comment" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button fx:id="reportButton" onAction="#handleReport" text="Report" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button fx:id="addToPlaylistButton" onAction="#handleAddToPlaylist" text="Add to Playlist" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8;" />
            </HBox>
            <TextArea fx:id="commentField" promptText="Write a comment..." style="-fx-background-color: #212529; -fx-text-fill: #ffffff; -fx-border-color: #ff6b6b; -fx-border-radius: 8;" />
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox fx:id="commentBox" spacing="10" style="-fx-padding: 10;" />
            </ScrollPane>
            <Label fx:id="errorLabel" style="-fx-font-size: 14px; -fx-text-fill: #ff6b6b;" text="" />
        </VBox>
    </center>
</BorderPane>