<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>

<AnchorPane prefHeight="434.0" prefWidth="611.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">

    <MediaView fx:id="mediaView" fitHeight="400.0" fitWidth="600.0" preserveRatio="false" smooth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />


    <VBox fx:id="loginBox" alignment="CENTER" layoutX="92.0" layoutY="2.0" opacity="0.8" prefHeight="396.0" prefWidth="415.0" spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.8); -fx-background-radius: 10; -fx-border-color: #495057; -fx-border-width: 1.2; -fx-border-radius: 10; -fx-padding: 30;">
        <effect>
            <DropShadow color="rgba(0,0,0,0.5)" offsetX="0" offsetY="4" radius="12" />
        </effect>
        <ImageView fitHeight="46.0" fitWidth="94.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/image1.png" />
            </image>
            <effect>
                <DropShadow color="rgba(0,0,0,0.3)" offsetX="0" offsetY="2" radius="8" spread="0" />
            </effect>
        </ImageView>
        <Label prefHeight="35.0" prefWidth="67.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="Login" />
        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: #212529; -fx-background-radius: 10; -fx-border-color: #ff6b6b; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #adb5bd; -fx-padding: 10;" styleClass="text-field" />
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: #212529; -fx-background-radius: 10; -fx-border-color: #ff6b6b; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #adb5bd; -fx-padding: 10;" styleClass="text-field" />
        <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="100" style="-fx-background-color: linear-gradient(to right, #dc3545, #a71d2a); -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px; -fx-font-weight: bold;" styleClass="login-button" text="Login" />
        <Hyperlink fx:id="signupLink" onAction="#goToSignup" style="-fx-text-fill: #007BFF; -fx-font-size: 14px; -fx-underline: false;" styleClass="hyperlink" text="Don't have an account? Sign up" />
        <Label fx:id="errorLabel" style="-fx-text-fill: #ff6b6b; -fx-font-size: 14px; -fx-font-weight: bold;" text="" />
    </VBox>
</AnchorPane>
