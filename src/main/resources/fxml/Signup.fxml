<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>

<AnchorPane prefHeight="623.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SignupController">

    <MediaView fx:id="mediaView" fitHeight="623.0" fitWidth="800.0" preserveRatio="false" smooth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

    <VBox fx:id="signupBox" alignment="CENTER" layoutX="199.0" layoutY="10.0" opacity="0.9" prefHeight="515.0" prefWidth="402.0" spacing="15" style="-fx-background-color: rgba(30, 30, 30, 0.85); -fx-background-radius: 20; -fx-border-color: #495057; -fx-border-width: 1.2; -fx-border-radius: 20; -fx-padding: 30;">
        <effect>
            <DropShadow color="rgba(0,0,0,0.5)" offsetX="0" offsetY="4" radius="12" />
        </effect>
        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: #212529; -fx-background-radius: 10; -fx-border-color: #4dabf7; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #adb5bd; -fx-padding: 10;" styleClass="text-field" />
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: #212529; -fx-background-radius: 10; -fx-border-color: #4dabf7; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #adb5bd; -fx-padding: 10;" styleClass="text-field" />
        <TextField fx:id="firstNameField" promptText="First Name" style="-fx-background-color: #212529; -fx-background-radius: 10; -fx-border-color: #4dabf7; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #adb5bd; -fx-padding: 10;" styleClass="text-field" />
        <TextField fx:id="lastNameField" promptText="Last Name" style="-fx-background-color: #212529; -fx-background-radius: 10; -fx-border-color: #4dabf7; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #adb5bd; -fx-padding: 10;" styleClass="text-field" />
        <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: #212529; -fx-background-radius: 10; -fx-border-color: #4dabf7; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #adb5bd; -fx-padding: 10;" styleClass="text-field" />
        <TextField fx:id="phoneField" promptText="Phone Number" style="-fx-background-color: #212529; -fx-background-radius: 10; -fx-border-color: #4dabf7; -fx-border-width: 1.5; -fx-border-radius: 10; -fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #adb5bd; -fx-padding: 10;" styleClass="text-field" />
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 8; -fx-padding: 6 12;" text="Profile Picture:" />
            <Button fx:id="uploadButton" onAction="#handleUpload" style="-fx-background-color: linear-gradient(to right, #6c757d, #495057); -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px; -fx-font-weight: bold;" styleClass="upload-button" text="Upload" />
        </HBox>
        <Label fx:id="fileLabel" style="-fx-text-fill: #adb5bd; -fx-font-size: 12px;" text="" />
        <Button fx:id="signupButton" onAction="#handleSignup" prefWidth="150" style="-fx-background-color: linear-gradient(to right, #007bff, #0056b3); -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 16px; -fx-font-weight: bold;" styleClass="signup-button" text="Sign Up" />
        <Hyperlink fx:id="loginLink" onAction="#goToLogin" style="-fx-text-fill: #4dabf7; -fx-font-size: 14px; -fx-underline: false;" styleClass="hyperlink" text="Already have an account? Log in" />
        <Label fx:id="errorLabel" style="-fx-text-fill: #ff6b6b; -fx-font-size: 14px; -fx-font-weight: bold;" text="" />
    </VBox>

</AnchorPane>
