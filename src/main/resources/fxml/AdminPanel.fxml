<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-background-color: #1a1d21;" spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AdminPanelController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 24px; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text="Admin Panel" />
    <BarChart fx:id="statsChart" minWidth="400.0" maxWidth="600.0" title="Platform Statistics">
        <xAxis>
            <CategoryAxis label="Metrics" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Count" />
        </yAxis>
    </BarChart>
    <Button fx:id="manageReportsButton" onAction="#handleManageReports" text="Manage Reports" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8;" />
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Users" />
            <TableView fx:id="userTable">
                <columns>
                    <TableColumn fx:id="usernameColumn" prefWidth="150" text="Username" />
                    <TableColumn fx:id="emailColumn" prefWidth="200" text="Email" />
                    <TableColumn fx:id="isBannedColumn" prefWidth="100" text="Banned" />
                </columns>
            </TableView>
            <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Contents" />
            <TableView fx:id="contentTable">
                <columns>
                    <TableColumn fx:id="contentIdColumn" prefWidth="100" text="ID" />
                    <TableColumn fx:id="contentTitleColumn" prefWidth="200" text="Title" />
                    <TableColumn fx:id="creatorColumn" prefWidth="150" text="Creator" />
                </columns>
            </TableView>
            <Label style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Reports" />
            <TableView fx:id="reportTable">
                <columns>
                    <TableColumn fx:id="reportIdColumn" prefWidth="100" text="Report ID" />
                    <TableColumn fx:id="reportedUserColumn" prefWidth="150" text="Reported User" />
                    <TableColumn fx:id="reasonColumn" prefWidth="200" text="Reason" />
                </columns>
            </TableView>
        </VBox>
    </ScrollPane>
    <Label fx:id="errorLabel" style="-fx-font-size: 14px; -fx-text-fill: #ff6b6b;" />
</VBox>